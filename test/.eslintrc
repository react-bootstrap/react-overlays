{
  "extends": ["plugin:mocha/recommended"],
  "env": {
    "mocha": true
  },
  "globals": {
    "assert": true,
    "expect": true,
    "sinon": true
  },
  "plugins": ["mocha"],
  "rules": {
    "no-script-url": 0,
    "no-unused-expressions": 0,
    "padded-blocks": 0,
    "react/no-multi-comp": 0,
    "react/prop-types": 0,
    "mocha/no-exclusive-tests": 2,
    "mocha/no-mocha-arrows": 0,
    "no-unused-vars": [2, { "varsIgnorePattern": "^_$" }]
  }
}
